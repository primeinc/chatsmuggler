# Enforce frozen lockfile — no lockfile mutations during install
frozen-lockfile=true

# Reject installs if pnpm version doesn't match packageManager field
engine-strict=true

# Default value — kept explicit so intent is clear (pnpm performs full install, not lockfile-only update)
lockfile-only=false

# Hoist nothing — keep node_modules clean and explicit
hoist=false
shamefully-hoist=false

# pnpm version is enforced via the packageManager field in package.json + corepack
